{
  "name": "react-component-picker",
  "version": "1.0.1",
  "description": "Chrome extension to pick React components and copy their names + source paths",
  "private": true,
  "license": "MIT",
  "author": "Lachlan Forsyth-Smith",
  "repository": {
    "type": "git",
    "url": "https://github.com/lachyfs/react-component-picker.git"
  },
  "bugs": {
    "url": "https://github.com/lachyfs/react-component-picker/issues"
  },
  "keywords": [
    "react",
    "chrome-extension",
    "devtools",
    "component-picker",
    "react-devtools"
  ],
  "scripts": {
    "build": "node esbuild.config.mjs",
    "package": "pnpm build && rm -f react-component-picker.zip && zip -r react-component-picker.zip manifest.json dist/ icons/ src/popup/popup.html src/popup/popup.css",
    "watch": "node esbuild.config.mjs --watch",
    "typecheck": "tsc --noEmit",
    "release": "pnpm version patch && git push --follow-tags",
    "release:minor": "pnpm version minor && git push --follow-tags",
    "release:major": "pnpm version major && git push --follow-tags"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.287",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.3"
  }
}
